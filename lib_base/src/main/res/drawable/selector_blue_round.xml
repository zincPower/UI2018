            <solid android:color="#4169E1" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="#4169E1" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="#4169E1" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#1E90FF" />
            <corners android:radius="50dp" />
        </shape>
    </item>

</selector>